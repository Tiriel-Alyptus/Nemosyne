VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_PUBLISHABLE_DEFAULT_KEY=sb_publishable_example_key

# Supabase connection (pooler IPv4 host). Percent-encode special chars in the password (# -> %23, % -> %25, ] -> %5D).
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME

# Required by the app for signing cookies/tokens
SESSION_SECRET=change_me_to_a_random_32_char_string

# Set to false only for local dev with a non-SSL Postgres
# DB_SSL=false

# Optional: relax SSL validation (helpful on corporate proxies with self-signed MITM certs)
# DB_SSL_MODE=relaxed

# Stripe (test ou prod)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_PREMIUM=
STRIPE_PRICE_PRO=
APP_URL=http://localhost:8787
